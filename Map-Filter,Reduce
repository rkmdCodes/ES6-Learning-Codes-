var numbers = [3, 56, 2, 48, 5];

//Map -Create a new array by doing something with each item in an array.
var newNumber = numbers.map((x) => {
  return x*2;
})

console.log(newNumber);
//Filter - Create a new array by keeping the items that return true.

var filterNumber = numbers.filter((x)=>{
  return x %2 === 0;
})

console.log(filterNumber);

//Reduce - Accumulate a value by doing something to each item in an array.

var sum = numbers.reduce((accumulator,currentNumber) =>{
  return accumulator + currentNumber;
})

console.log(sum);

//map find function to find the is element exist or not 

var foundNumber = numbers.find( (x) => {
return x > 10;    // this will return the first value that matches the given condition
})


// map find index function in order to seach for the indx of a number

var index = number.findIndex((x)=> {
return x > 13;  // this will return the first value that matches the given condition
})
